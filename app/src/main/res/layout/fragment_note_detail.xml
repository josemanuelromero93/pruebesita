<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.NoteDetailFragment"
    android:background="#F2F2F2">

    <EditText
        android:id="@+id/fragment_note_detail_title"
        android:hint="Enter note title"
        android:background="#F5DA81"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="7dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/fragment_note_detail_description"
        android:hint="Enter note description..."
        android:background="#F5DA81"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:padding="7dp"
        android:gravity="top|left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/fragment_note_detail_title"/>

</RelativeLayout>

